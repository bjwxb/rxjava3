<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.xinzhili.doctor.view.IndexViewPager
        android:id="@+id/vp_patient_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View style="@style/Divider_hor" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <!--机构患者/视频患者-->
        <LinearLayout
            android:id="@+id/ll_bottom_bar_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="visible">

            <View style="@style/Divider_hor"/>

            <net.lucode.hackware.magicindicator.MagicIndicator
                android:id="@+id/magic_indicator_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_8"
                android:background="@color/white" />
        </LinearLayout>

        <!--管理操作面板-->
        <LinearLayout
            android:id="@+id/ll_manager_action_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/c_f7f7f7"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/main_color"
                android:textSize="@dimen/sp_16" />

            <View
                style="@style/Divider_ver"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_12" />

            <TextView
                android:id="@+id/tv_rescind_contract"
                style="@style/HomeBarManagerActionStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_action_rescind"
                android:text="@string/action_rescind_contract" />

            <TextView
                android:id="@+id/tv_notice"
                style="@style/HomeBarManagerActionStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_action_notice"
                android:text="@string/action_notice" />

            <TextView
                android:id="@+id/tv_level"
                style="@style/HomeBarManagerActionStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_action_level"
                android:text="@string/action_level" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/HomeBarManagerActionStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_action_time"
                android:text="@string/action_time" />

        </LinearLayout>
        <!--群发消息面板-->
        <RelativeLayout
            android:id="@+id/rl_send_group_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_4"
            android:background="@drawable/selector_send_group_message_bg"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:gravity="center"
                android:text="发送群消息"
                android:textColor="@color/c_ffffff"
                android:textSize="@dimen/sp_16" />

        </RelativeLayout>
    </FrameLayout>

</LinearLayout>


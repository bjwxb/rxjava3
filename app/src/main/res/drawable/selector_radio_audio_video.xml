<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/c_f6f6f6"/>
            <stroke android:width="1px" android:color="@color/c_f6f6f6" />
            <corners android:radius="@dimen/dp_3" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#EDF1FA" />
            <stroke android:width="1px" android:color="@color/main_color" />
            <corners android:radius="@dimen/dp_3" />
        </shape>
    </item>
</selector>
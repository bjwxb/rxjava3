                <stroke
                    android:width="1dp"
                    android:color="@color/metrics_green"
                    android:dashGap="@dimen/dp_1"
                    android:dashWidth="@dimen/dp_3"/>
            </shape>
        </rotate>
    </item>
</layer-list>